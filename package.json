{
  "name": "koala",
  "version": "1.0.0",
  "description": "KoaLa is a skeleton which will help in the future to create new projects.",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "debug": "NODE_ENV=development nodemon --inspect-brk index.js",
    "test": "jest --forceExit --detectOpenHandles --silent",
    "lint": "standard --fix"
  },
  "dependencies": {
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "mysql2": "^1.6.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "standard": "*",
    "supertest": "^3.3.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "node_modules"
    ],
    "watch": [
      "*.js"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [],
    "globals": [
      "describe",
      "test",
      "expect",
      "beforeAll"
    ]
  },
  "author": "k4wo",
  "license": "MIT"
}
